---
import type { CollectionEntry } from "astro:content";
import Header from "../components/Header";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./layout.astro";
type Props = CollectionEntry<"project">["data"];
import IconButton from "../components/IconButton.astro";
import { ArrowUpRight, Github } from "lucide-react";

const {
  title,
  description,
  languages,
  link,
  frameworks,
  github,
  tags,
  type,
  status,
  pubDate,
  updatedDate,
  heroImage,
  video,
  screenshots,
} = Astro.props;

function getYouTubeEmbedUrl(url: string): string | null {
  try {
    const parsed = new URL(url);
    if (parsed.hostname === "youtu.be") {
      return `https://www.youtube.com/embed/${parsed.pathname.slice(1)}`;
    }
    if (parsed.hostname.includes("youtube.com") && parsed.searchParams.get("v")) {
      return `https://www.youtube.com/embed/${parsed.searchParams.get("v")}`;
    }
  } catch {}
  return null;
}

const embedUrl = video ? getYouTubeEmbedUrl(video) : null;
const isDirectVideo = video && !embedUrl;
---

<Layout title={title} description={description} image={heroImage}>
    <div class="grid gap-4 md:max-w-2xl mt-6">
      <article>
        <header>
          <h1 class="text-5xl font-bold mt-4 mb-4 text-foreground">{title}</h1>
          <!-- <div
            class="text-primary my-3 text-sm hover:bg-primary/100 hover:dark:bg-primary duration-200 ease-in-out transform
             hover:cursor-pointer w-fit mt-3 hover:text-white hover:scale-[1.02] bg-primary/40 dark:bg-primary/40 px-1.5 py-1 rounded font-medium flex gap-1 items-center"
          >
            <p class="">Website</p>
            <span>
              <ArrowUpRight size={20} />
            </span>
          </div> -->
          <div class="flex gap-3">
            {
              link && (
                <div class="my-4">
                  <IconButton title="Website" link={link}>
                    <ArrowUpRight size={20} />
                  </IconButton>
                </div>
              )
            }
            {
              github && (
                <div class="my-4">
                  <IconButton title="GitHub" link={github}>
                    <Github size={20} />
                  </IconButton>
                </div>
              )
            }
          </div>
          <p class="text-muted-foreground">{description}</p>
          <p
            class="text-primary text-sm w-fit mt-3 bg-primary/20 dark:bg-primary/20 px-1.5 py-1 rounded font-medium"
          >
            {type}
          </p>
          <div class="flex justify-between items-center">
            <div class="flex items-center text-sm mt-5 text-muted-foreground">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <span class="text-gray-500 ml-2">
                    Updated: <FormattedDate date={updatedDate} />
                  </span>
                )
              }
            </div>
          </div>
        </header>
        {embedUrl && (
          <div class="mt-4 rounded-lg overflow-hidden aspect-video">
            <iframe
              src={embedUrl}
              title={title}
              class="w-full h-full"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        )}
        {isDirectVideo && (
          <div class="mt-4 rounded-lg overflow-hidden">
            <video
              src={video}
              class="w-full rounded-lg"
              controls
              muted
              playsinline
              preload="metadata"
            ></video>
          </div>
        )}
        {!embedUrl && !isDirectVideo && (
          <img
            src={heroImage}
            alt={heroImage}
            class="w-full h-64 object-cover object-left rounded-lg mt-4"
          />
        )}
        {screenshots && screenshots.length > 0 && (
          <div class="mt-8 grid gap-4">
            <h2 class="text-lg font-semibold text-foreground">Screenshots</h2>
            <div class="grid gap-4">
              {screenshots.map((src: string) => (
                <img
                  src={src}
                  alt={`${title} screenshot`}
                  class="w-full rounded-xl shadow-lg ring-1 ring-border/20"
                  loading="lazy"
                />
              ))}
            </div>
          </div>
        )}
        <div class="prose dark:prose-invert mt-8 text-foreground/90">
          <slot />
        </div>
      </article>
    </div>
</Layout>
