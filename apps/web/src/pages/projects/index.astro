---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/layout.astro";
import ProjectFeed from "../../components/ProjectFeed";

const projects = (await getCollection("project")).sort((a, b) => {
  const rankA = a.data.rank ?? 999;
  const rankB = b.data.rank ?? 999;
  return rankA - rankB;
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Projects - Prakhar Shukla"
      description="Full-stack projects spanning web, mobile, AI agents, and open source. Including Andronix (2.5M+ downloads), Lumoflo, and work from Yobr."
    />
  </head>
  <Layout>
    <div class="grid gap-1 md:max-w-2xl mt-6">
      <h1 class="h2-heading">Projects</h1>
      <div class="grid gap-3">
        <p class="description mb-4">
          I'm a software engineer with a passion for building products that
          people love. I have experience working with a variety of technologies
          and languages, including JavaScript, TypeScript, React, Node.js. I'm
          always looking for new challenges and opportunities to learn and grow
          as a developer.
        </p>
      </div>
      <ProjectFeed projects={projects} client:load />
    </div>
  </Layout>
</html>
