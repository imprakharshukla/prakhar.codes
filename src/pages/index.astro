---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import PostFeed from "../components/PostFeed";
import ProjectFeed from "../components/ProjectFeed";
import Layout from "../layouts/layout.astro";
import { cn } from "../lib/utils";
import GitHubStatsBentoGrid from "../components/GithubStatsBentoGrid";
import IconButton from "../components/IconButton.astro";
const currentPath = Astro.url.pathname;

const blogPosts = await getCollection("blog");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Layout>
    <div class="grid gap-2 md:max-w-2xl mt-6 animate-in fade-in duration-200">
      <div class="">
        <img
          width="1500"
          height="500"
          class="rounded-2xl shadow-lg mb-8 -rotate-1"
          src="https://imagedelivery.net/nW2YfjVFqxC-ok-_zXWXQw/ec8f6a0b-f82f-4f17-391a-adee18449200/feed"
          alt=""
        />
      </div>
      <h1 class="h2-heading">hey! i am prakhar shukla.</h1>
      <p class="description leading-relaxed max-w-lg">
        I am almost a software engineer. You can find me working on a lots of
        personal project at one. Currently working on <span
          class="text-foreground">Lumoflo</span
        >
        and <span class="text-foreground">Andronix</span>.
      </p>
      <p class="description">
        I build for the <span class="text-foreground font-medium">web</span>, <span
          class="text-foreground font-medium">server</span
        >, <span class="text-foreground font-medium">mobile</span>.
      </p>

      <div class="flex items-center gap-2 mt-3 flex-wrap">
        <IconButton
          title={"Resume"}
          link={"/resume/Prakhar_Resume_2024_Updated.pdf"}
        >
          <svg
            class="text-current h-4 w-4"
            role="img"
            fill="currentColor"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-file-text"
            ><path
              d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
            ></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 9H8"
            ></path><path d="M16 13H8"></path><path d="M16 17H8"></path></svg
          >
        </IconButton>

        <IconButton
          title={"GitHub"}
          link={"https://github.com/imprakharshukla"}
        >
          <svg
            class="text-current h-4 w-4"
            role="img"
            fill="currentColor"
            stroke="none"
            viewBox="0 0 24 24"
